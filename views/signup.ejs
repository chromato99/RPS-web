<html>

<head>
    <title>RPS-web</title>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/signup.css">

    <script>
        //function for input of checking whether user input password, and re input of password are the same
        function check_pw() {
            if(document.getElementById('password').value.length < 6) {
                document.getElementById('check2').innerHTML = 'The password must be at least 6 characters';
            } else {
                document.getElementById('check2').innerHTML = '';
            }

            //if 2 passwords all have value, not null
            if (document.getElementById('password').value != '' && document.getElementById('re-password').value != '') {
                //if 2 passwords have same value
                if (document.getElementById('password').value == document.getElementById('re-password').value) {
                    document.getElementById('check').innerHTML = 'The password matches.';
                    document.getElementById('check').style.color = 'blue';
                }
                //if 2 passwords don't match
                else {
                    document.getElementById('check').innerHTML = 'The password does not match.';
                    document.getElementById('check').style.color = 'red';
                }
            }
        }


    </script>
</head>


<body>

    <div>
        <!-- divide for top part of the document, where headline, icon will be displayed -->
        <div class="top">

            <!-- divide for the left part of the top division, where an icon will be displayed -->
            <div class="left">
                <img src="/img/rock_signup.png" style="height: 80px; float: right;">
            </div>

            <!-- divide for the right part of the top division, where an another icon will be displayed -->
            <div class="right">
                <img src="/img/scissor_signup.png" style="height: 80px; float: left;">
            </div>
            <!--image downloaded from https://www.flaticon.com/search?word=paper+scissors+rock-->

            <!-- divide for the centeral part of the top division, where a text will be displayed -->
            <div class="center">
                <h1>
                    RPS-web Sign Up
                </h1>

            </div>
        </div>

        <div class="bottom">

            <!-- divide for the centeral part of the remaing part of the document except for the top part, where 
        user will input data for signing up -->
            <form action='/signup' method='post'>
            <!-- divide for the centeral part of the centeral part of the bottom part, where user will input their data -->
                <div class="centre">
                    <!-- table for containing data for the newly input user data -->
                    <table style=" margin-left:auto; margin-right:auto;">
                        
                        <!-- ID input (nickname) -->
                        <tr>
                            <td><b style="font-size: 25px;">ID (Nickname) </b></td>
                            <td><input type='text' name='username' placeholder='example' style="float:right; font-size: 15px" required>
                            </td> 
                        </tr> 

                        <!-- email input -->
                        <tr>
                            <td><b style="font-size: 25px;">Email</b></td>
                            <td> <input type='email' name='email' id='email' placeholder='example@gachon.ac.kr' style="float:right; font-size: 15px;" required></td>
                        </tr>

                        <!-- password input -->
                        <tr>
                            <td><b style="font-size: 25px;">Password</b></td>
                            <td><input type='password' name='password' id="password" placeholder='enter more than 6 letters' style="float:right; font-size: 15px" pattern=".{6,}" required onchange="check_pw()"></td>
                        </tr>

                        <!-- password re input for confirming whether 2 are the same -->
                        <tr>

                            <td><b style="font-size: 25px;">Confirm Password</b></td>
                            <td><input type='password' name='re-password' id='re-password' placeholder='re-password' style="float: right; font-size: 15px" onchange="check_pw()" required>

                            </td>
                        </tr>


                        </table>
                        <br>
                </div>
                    <!-- divide for the bottom part of the centeral part, where submit button, link back to log in file exists -->
                <div class="btm">
                    <span id="check"><%= message %></span><br>
                    <span id="check2"></span><br><br>
                        <!-- submit input data to the DB -->
                        <input type='submit' value="Sign Up"
                            style="border-radius: 5px; margin-right:-4px; border: 1px solid rgb(235, 135, 230); background-color: rgba(0,0,0,0); color: rgb(245, 53, 171); padding: 10px; font-size: 20px;"><br>
                    
                        <!-- if user already have ID then, go back to log in page -->
                    <a href="/login" style="font-size: 25px;"><b>Do you already have an account?</b></a>
                </div>
            </form>
        </div>
    </div>

</body>

</html>